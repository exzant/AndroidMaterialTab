<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_below="@+id/tvWaktu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:padding="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="55dp"
        android:background="#28333333"
        />

    <ImageView
        android:id="@+id/image_view"
        android:src="@mipmap/ic_launcher"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:paddingTop="11dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="12"
        />


    <TextView
        android:layout_toRightOf="@id/image_view"
        android:id="@+id/tvAkun"
        android:textColor="#333333"
        android:textSize="15dp"
        android:text="Dompet"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@id/image_view"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvWaktu"
        android:layout_below="@+id/tvAkun"
        android:textColor="#40000000"
        android:text="DD-MM-YYYY hh:MM"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvNominal"
        android:textColor="@color/colorNetral"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="1,234,567"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_below="@+id/tvNominal"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvKeterangan"
        android:textColor="#40000000"
        android:text=""
        android:textSize="15dp"
        android:gravity="right"
        android:singleLine="true"
        android:maxWidth="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

</RelativeLayout>